generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model address {
  id         Int    @id @default(autoincrement())
  firstName  String
  lastName   String
  mobilePhone String
  address    String
  postId     String
  user_id    Int
  user       user   @relation(fields: [user_id], references: [id])

  @@index([user_id])
}

model cart {
  id      Int   @id @default(autoincrement())
  post_id Int?
  user_id Int?
  post    post? @relation(fields: [post_id], references: [id])
  user    user? @relation(fields: [user_id], references: [id])

  @@index([post_id])
  @@index([user_id])
}

model order {
  id            Int         @id @default(autoincrement())
  order_date    DateTime    @db.Timestamp(0)
  user_id       Int  
  payment_slip  String
  totalPrice    String
  user          user        @relation(fields: [user_id], references: [id])
  orderitem     orderitem[]
  soldout       soldout[]

  @@index([user_id])
}

model orderitem {
  id       Int     @id @default(autoincrement())
  discount Decimal
  order_id Int
  post_id  Int
  order    order   @relation(fields: [order_id], references: [id])
  post     post    @relation(fields: [post_id], references: [id])

  @@index([order_id])
  @@index([post_id])
}

model post {
  id             Int         @id @default(autoincrement())
  idcactus       String      @unique
  front_side     String
  A_side         String
  B_side         String
  C_side         String
  family_name    String
  name           String
  diameter       String
  price          String
  height         String?
  born           String
  postByUser_id  Int
  create_time    DateTime?   @default(now()) @db.Timestamp(0)
  update_time    DateTime?   @db.Timestamp(0)
  soldOut_status Boolean?
  describtion    String?
  cart           cart[]
  orderitem      orderitem[]
  user           user        @relation(fields: [postByUser_id], references: [id])

  @@index([postByUser_id])
}

model soldout {
  id           Int      @id @default(autoincrement())
  order_id     Int
  soldOut_time DateTime @db.Timestamp(0)
  order        order    @relation(fields: [order_id], references: [id])

  @@index([order_id])
}

model user {
  id            Int       @id @default(autoincrement())
  firstName     String
  lastName      String
  email         String?   @unique
  mobile        String?   @unique
  password      String
  profile_image String?
  isAdmin       Boolean?  @default(false)
  address       address[]
  cart          cart[]
  order         order[]
  post          post[]
}
